<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.filesender.ClientController"
         prefWidth="450" prefHeight="450">
    <Tab text="Upload">
        <VBox alignment="CENTER" spacing="20" prefWidth="450" prefHeight="450">
            <Label fx:id="jlFileName" text="Choose a file to send" style="-fx-font-size: 25px;"/>
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="jbChooseFile" text="Choose File" prefWidth="150" prefHeight="75" style="-fx-font-size: 20px;" onAction="#handleChooseFile"/>
            </HBox>
        </VBox>
    </Tab>
    <Tab text="Manage">
        <VBox alignment="CENTER" spacing="20" prefWidth="450" prefHeight="450">
            <ListView fx:id="lvFiles" prefWidth="400" prefHeight="300"/>
        </VBox>
    </Tab>
</TabPane>
